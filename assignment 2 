      "cell_type": "code",
      "source": [
        "import numpy as np\n",
        "\n",
        "def f(x):\n",
        "    return x**2 + 3*x + 10\n",
        "\n",
        "def df(x):\n",
        "    return 2*x + 3\n",
        "\n",
        "def gradient_descent(initial_x, learning_rate, iterations):\n",
        "    x = initial_x\n",
        "    for i in range(iterations):\n",
        "        grad = df(x)\n",
        "        x = x - learning_rate * grad\n",
        "        print(f\"Iteration {i+1}: x = {x:.4f}, f(x) = {f(x):.4f}, gradient = {grad:.4f}\")\n",
        "    return x\n",
        "\n",
        "# Parameters\n",
        "initial_x = 0.0\n",
        "learning_rate = 0.1\n",
        "iterations = 10\n",
        "\n",
        "# Run gradient descent\n",
        "optimal_x = gradient_descent(initial_x, learning_rate, iterations)\n",
        "optimal_value = f(optimal_x)\n",
        "\n",
        "print(\"\\nOptimal Solution:\")\n",
        "print(f\"x* = {optimal_x:.4f}\")\n",
        "print(f\"f(x*) = {optimal_value:.4f}\")"
      ],
      "metadata": {
        "id": "VAXeVLLM9A2Z"
      },
      "execution_count": null,
      "outputs": []
    }
